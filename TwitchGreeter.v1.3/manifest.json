{
  "name": "Twitch Greeter",
  "version": "1.3",
  "description": "配信者がTwitchのチャット欄のリスナーへの挨拶を管理するためのツール",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}
